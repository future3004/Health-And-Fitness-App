<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d94551</item>
        <item name="colorPrimaryDark">#77141e</item>
        <item name="colorAccent">#ec7b85</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4d181d</item>
        <item name="colorPrimaryDark">#2e0106</item>
        <item name="colorAccent">#584648</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Universal Play -->
    <style name="UAmpAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <!-- Day/Light mode theme-->
    <style name="LightTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d94551</item>
        <item name="colorPrimaryDark">#77141e</item>
        <item name="colorAccent">#bfb2b4</item>

        <item name="backgroundColor">#fcfcfc</item>

        <!-- animation style-->
        <item name="android:windowAnimationStyle">@style/ThemeAnimationTransition</item>

    </style>

    <!-- Night/Dark mode theme -->
    <style name="MyDarkTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#b31a27</item>

        <item name="backgroundColor">#303030</item>

        <!-- animation style-->
        <item name="android:windowAnimationStyle">@style/ThemeAnimationTransition</item>

    </style>

    <!-- transition animation from light to dark theme -->
    <style name="ThemeAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>

    </style>
</resources>