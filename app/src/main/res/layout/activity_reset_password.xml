<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/lostPassTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp"
        android:text="Forgot your Password?"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#353434"/>

    <TextView
        android:id="@+id/lostPassInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lostPassTextView"
        android:layout_below="@+id/lostPassTextView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:text="@string/lost_pass_info" />

    <TextView
        android:id="@+id/lostPassEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lostPassInfoTextView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Email" />

    <EditText
        android:id="@+id/lostPassEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/lostPassEmailTextView"
        android:layout_alignStart="@+id/lostPassEmailTextView"
        android:layout_below="@+id/lostPassEmailTextView"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lostPassEmailEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:background="#0b53be"
        android:textColor="#fff"
        android:text="Send Password" />



</RelativeLayout>