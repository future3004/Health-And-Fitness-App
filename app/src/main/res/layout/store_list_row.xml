<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="5dp">

        <ImageView
            android:id="@+id/grocery_store_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="image" />


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp">


            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALDI"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/txtStoreRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating : 4.5"
                android:textColor="#212121"
                android:layout_below="@+id/txtStoreName"
                />

            <TextView
                android:id="@+id/txtStoreAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1620 Eastchase Pkwy"
                android:textColor="#212121"
                android:layout_below="@+id/txtStoreRating"
                />

            <TextView
                android:id="@+id/txtStoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textColor="#212121"
                android:layout_below="@+id/txtStoreAddr"
                />


    </RelativeLayout>

</LinearLayout>