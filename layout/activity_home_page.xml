<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/AppBackground"
    tools:context=".GettingStarted">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homePageHeader"
        android:text="Place Holder Home Page"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/currentDay"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_below="@+id/homePageHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="279dp"
        android:gravity="center"
        android:text="Current Day"
        android:backgroundTint="@color/design_default_color_primary_variant"
        />

    <Button
        android:id="@+id/macrosHelp"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_below="@+id/homePageHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="279dp"
        android:gravity="center"
        android:text="Macros Help"
        android:backgroundTint="@color/design_default_color_primary_variant"
        />

    <Button
        android:id="@+id/toDoToday"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_below="@+id/homePageHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="144dp"
        android:gravity="center"
        android:text="To Do Today"
        android:backgroundTint="@color/design_default_color_primary_variant"
        />

    <Button
        android:id="@+id/findGymsOrParks"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_below="@+id/homePageHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="144dp"
        android:gravity="center"
        android:text="Find Gyms or Parks"
        android:backgroundTint="@color/design_default_color_primary_variant"
        />

    <Button
        android:id="@+id/reminders"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_below="@+id/homePageHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="279dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="7dp"
        android:gravity="center"
        android:text="Reminders"
        android:backgroundTint="@color/design_default_color_primary_variant"
        />

    <Button
        android:id="@+id/findHealthyOptions"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_below="@+id/homePageHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="278dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Find Healthy Options"
        android:backgroundTint="@color/design_default_color_primary_variant"
        />


</RelativeLayout>